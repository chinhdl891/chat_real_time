<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/conner_dialog"
        android:padding="10dp">

        <EditText
            android:textColor="@color/black"
            android:id="@+id/edt_create_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/edt_create_room_name">

            <Button
                android:id="@+id/btn_create_room_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_weight="1"
                android:background="@drawable/conner_button"
                android:text="Cancel" />

            <Button
                android:id="@+id/btn_create_room"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:background="@drawable/conner_button"
                android:text="Create" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>